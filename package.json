{
  "name": "audd-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "AUDD Node.js Wrapper - Workspace Root",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmcasimar/audd-node.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" run build",
    "test": "pnpm -r --filter \"./packages/**\" run test",
    "lint": "pnpm -r --filter \"./packages/**\" run lint",
    "format": "pnpm -r --filter \"./packages/**\" run format",
    "clean": "pnpm -r --filter \"./packages/**\" run clean"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
